<meta name="viewport" content="width=device-width, initial-scale=1">

<div class="row">
  <div class="small-4 large-4 columns">
  	<p>How much delay between ghosts? (seconds)</p>
		<%= text_field_tag 'name', nil, class: "delay" %>
		<%= button_tag 'Start', class: "start" %>
		<%= button_tag 'Stop', class: "end" %>
		<br>
		<br>
		<%= audio_tag("left-left.mp3", controls: true) %>
		<%= audio_tag("right-right.mp3", controls: true) %>
		<%= audio_tag("front-left.mp3", controls: true) %>
		<%= audio_tag("front-right.mp3", controls: true) %>
		<%= audio_tag("back-left.mp3", controls: true) %>
		<%= audio_tag("back-right.mp3", controls: true) %>
  </div>
</div>
